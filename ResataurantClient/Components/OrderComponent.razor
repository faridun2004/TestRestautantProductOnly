@page "/order/{orderId:int}"
@using ResataurantClient.Models
@using ResataurantClient.Services
@inject IOrderService OrderService
@inject NavigationManager NavigationManager
@code {
    [Parameter]
    public int OrderId { get; set; }
    private Order? order;

    protected override async Task OnInitializedAsync()
    {
        order = await OrderService.GetOrder(OrderId);
    }
}

<h2>Детали заказа</h2>

@if (order == null)
{
    <p>Загрузка...</p>
}
else
{
    <div>
        <h4>Номер заказа: @order.OrderId</h4>
        <h4>Дата заказа: @order.OrderDate</h4>
        <h4>Итоговая сумма: @order.TotalPrice Сомони</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Количество</th>
                    <th>Цена</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in order.OrderItems)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price Сомони</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
